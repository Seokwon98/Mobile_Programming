<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Library.Book_completed"
    android:background="#DDC7A8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/Book_complete_enroll"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다 읽은 책 등록"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/Book_ing_Detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다 읽으셨나요?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="읽기 시작 날짜"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"/>
    <TextView
        android:id="@+id/Book_complete_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_yellow"
        android:text="날짜"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="읽기 종료 날짜"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"/>
    <TextView
        android:id="@+id/Book_complete_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_yellow"
        android:text="날짜"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 책의 점수는요?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"/>

    <RatingBar
        android:id="@+id/Book_complete_ratingbar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:rating = "3"
        android:isIndicator="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책에 대한 의견을 적어보세요."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"/>

    <EditText
        android:layout_gravity="top"
        android:id="@+id/Book_complete_review"
        android:paddingLeft="6dp"
        android:layout_width="350dp"
        android:minHeight="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background_darkbrown_round"/>

    </LinearLayout>
</ScrollView>